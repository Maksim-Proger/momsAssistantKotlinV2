<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:background="@color/item_statistics"
            android:textColor="@color/item_statistics_text_color"
            android:textColorHint="@color/item_statistics_text_color"
            android:hint="Элемент статистики"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>